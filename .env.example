# Application Settings
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=file:/data/dev.db

# Zammad Integration
ZAMMAD_URL=https://your-zammad-instance.com
ZAMMAD_TOKEN=your-zammad-token

# Authentication
APP_PASSWORD=admin
JWT_SECRET=your-secure-jwt-secret

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:8071,http://localhost:3071

# Frontend Configuration
VITE_API_URL=http://localhost:3071/api
VITE_APP_NAME=Zammad Budget Manager
VITE_APP_VERSION=2024.12.11

# Security Settings
VITE_AUTH_COOKIE_SECURE=false
VITE_AUTH_COOKIE_SAMESITE=Lax
VITE_CORS_CREDENTIALS=true

# Debug Settings (Development Only)
VITE_ENABLE_LOGGING=true
VITE_DEBUG_LEVEL=debug

# Docker Settings
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Note: In production, make sure to:
# 1. Use a strong JWT_SECRET
# 2. Set APP_PASSWORD to a secure value
# 3. Configure CORS_ALLOWED_ORIGINS to your domain
# 4. Set VITE_AUTH_COOKIE_SECURE=true in production
# 5. Set VITE_AUTH_COOKIE_SAMESITE=Strict in production
# 6. Set VITE_ENABLE_LOGGING=false in production