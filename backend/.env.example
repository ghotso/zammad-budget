# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000

# Security
JWT_SECRET=your-secure-jwt-secret-here
APP_PASSWORD=your-app-password-here

# Database Configuration
DATABASE_URL=file:/data/dev.db

# Zammad Integration
ZAMMAD_URL=http://your-zammad-instance
ZAMMAD_TOKEN=your-zammad-token

# CORS Settings
# Comma-separated list of allowed origins
# For development:
# CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8071,http://localhost:3071
# For production:
CORS_ALLOWED_ORIGINS=http://your-domain.com

# Cookie Settings
# For development:
# COOKIE_SECURE=false
# COOKIE_SAMESITE=Lax
# For production:
COOKIE_SECURE=true
COOKIE_SAMESITE=Strict

# Debug Settings
DEBUG_LEVEL=info
ENABLE_REQUEST_LOGGING=false

# Docker Settings
# These settings are used when running in Docker environment
DOCKER_NETWORK=app-network
DOCKER_BACKEND_HOST=backend
DOCKER_FRONTEND_HOST=frontend

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5
MAX_HEALTH_CHECK_RETRIES=3