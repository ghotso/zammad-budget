# API Configuration
# Development: http://localhost:3000
# Production: /api
VITE_API_URL=http://localhost:3000

# Environment
# development | production
NODE_ENV=development

# Application Settings
VITE_APP_NAME=Zammad Budget Manager
VITE_APP_VERSION=2024.12.11

# Cookie Settings
# Development: false
# Production: true
VITE_COOKIE_SECURE=false

# Cookie SameSite
# Development: Lax
# Production: Strict
VITE_COOKIE_SAMESITE=Lax

# CORS Settings
# Development: true
# Production: false
VITE_ALLOW_CREDENTIALS=true

# Debug Settings
# Development: true
# Production: false
VITE_ENABLE_LOGGING=true