# API Configuration
# Development
VITE_API_URL=http://localhost:3000
# Production
# VITE_API_URL=/api

# Environment
NODE_ENV=production

# Application Settings
VITE_APP_NAME=Zammad Budget Manager
VITE_APP_VERSION=2024.12.11

# Authentication Settings
# Development
VITE_AUTH_COOKIE_SECURE=false
VITE_AUTH_COOKIE_SAMESITE=Lax
# Production
# VITE_AUTH_COOKIE_SECURE=true
# VITE_AUTH_COOKIE_SAMESITE=Strict

# CORS Settings
# Development
VITE_CORS_CREDENTIALS=true
# Production
# VITE_CORS_CREDENTIALS=true

# Debug Settings
# Development
VITE_ENABLE_LOGGING=true
VITE_DEBUG_LEVEL=debug
# Production
# VITE_ENABLE_LOGGING=false
# VITE_DEBUG_LEVEL=error

# Docker Settings
# These settings are used when running in Docker environment
VITE_DOCKER_API_URL=http://backend:3000
VITE_DOCKER_NETWORK=app-network
VITE_DOCKER_BACKEND_HOST=backend
VITE_DOCKER_FRONTEND_HOST=frontend

# Build Settings
VITE_BUILD_TARGET=es2022
VITE_BUILD_MINIFY=true
VITE_BUILD_SOURCEMAP=false

# Feature Flags
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_NOTIFICATIONS=true